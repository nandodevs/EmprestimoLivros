@model IEnumerable<DoramasModel>

<div class="container">

    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Lista de Doramas</h1>
        <a class="btn btn-success mx-2">Novo dorama</a>
    </div>

    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th scope="col">Nacionalidade</th>
                <th scope="col">Nome</th>
                <th scope="col">Status</th>
                <th scope="col">Quantidade de Episódios</th>
                <th scope="col">Data de Início</th>
                <th scope="col">Data de Fim</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var doramas in Model)
                {
                    <tr>
                        <th scope="row">@doramas.Nacionalidade</th>
                        <td>@doramas.Nome</td>
                        <td>@doramas.Status</td>
                        <td>@doramas.QtdEpisodios</td>
                        <td>@doramas.DataInicio</td>
                        <td>@doramas.DataFim</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

